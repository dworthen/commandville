{
  "name": "@commandville/main",
  "version": "0.0.1",
  "description": "CLI command runner",
  "scripts": {
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "pnpm clean -r --parallel --filter ./packages",
    "clean:docs": "pnpm clean --filter @commandville/docs",
    "build": "pnpm build -r --stream --filter ./packages",
    "build:docs": "pnpm build --filter @commandville/docs",
    "start": "pnpm start -r --parallel --filter ./packages",
    "start:docs": "pnpm start --filter @commandville/docs",
    "format:check": "prettier --check \"./packages/*/src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"./packages/*/src/**/*.{js,jsx,ts,tsx}\"",
    "lint:check": "eslint \"./packages/*/src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint --fix \"./packages/*/src/**/*.{js,jsx,ts,tsx}\"",
    "ci:staged": "lint-staged",
    "release:changesets": "changeset",
    "release:versions": "changeset version",
    "release:packages": "pnpm publish -r --access public --filter ./packages",
    "release:docs": "pnpm release --filter @commandville/docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
