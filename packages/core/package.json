{
  "name": "@commandville/core",
  "version": "0.0.2",
  "description": "CLI command runner",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "cmv": "./dist/program/load.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "shx rm -rf dist",
    "typecheck": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:package": "esbuild src/**/*.ts --sourcemap --format=esm --platform=node --target=node14 --outdir=dist",
    "build:tsc": "tsc",
    "build": "run-p build:types build:package",
    "watch:types": "pnpm build:types -- --watch",
    "watch:package": "pnpm build:package -- --watch",
    "start": "run-p watch:types watch:package",
    "release:package": "npm-publish --token $NPM_TOKEN --access public ./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dworthen/monorepo.git"
  },
  "keywords": [
    "commandville",
    "core"
  ],
  "author": "Derek Worthen <worthend.derek@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dworthen/monorepo/issues"
  },
  "homepage": "https://github.com/dworthen/monorepo#readme",
  "devDependencies": {
    "@jsdevtools/npm-publish": "^1.4.3",
    "@types/glob": "^7.1.3",
    "@types/multipipe": "^3.0.0",
    "@types/node": "^15.12.4",
    "@types/yargs": "^16.0.1",
    "concurrently": "^6.2.0",
    "esbuild": "^0.11.17",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "dotenv": "^9.0.2",
    "dotenv-expand": "^5.1.0",
    "find-up": "^5.0.0",
    "glob": "^7.1.7",
    "into-stream": "^7.0.0",
    "multipipe": "^4.0.0",
    "multistream": "^4.1.0",
    "yargs": "^17.0.1"
  }
}
