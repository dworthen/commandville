{
  "name": "@commandville/core",
  "version": "0.0.1",
  "description": "CLI command runner",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "bin/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "shx rm -rf dist",
    "typecheck": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:package": "esbuild src/**.ts --sourcemap --format=cjs --platform=node --target=node12 --outdir=dist",
    "build": "run-p build:types build:package",
    "watch:types": "tsc --noEmit --watch",
    "watch:package": "pnpm build:package -- --watch",
    "start": "run-p watch:types watch:package",
    "release:package": "npm-publish --token $NPM_TOKEN ./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dworthen/monorepo.git"
  },
  "keywords": [
    "commandville",
    "core"
  ],
  "author": "Derek Worthen <worthend.derek@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dworthen/monorepo/issues"
  },
  "homepage": "https://github.com/dworthen/monorepo#readme",
  "devDependencies": {
    "@jsdevtools/npm-publish": "^1.4.3",
    "esbuild": "^0.11.17",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "typescript": "^4.2.4"
  }
}
