{
  "name": "commandville",
  "version": "0.2.0",
  "description": "'CLI for running CLIs'",
  "type": "module",
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "publishConfig": {
    "types": "dist/types/commandville.d.ts"
  },
  "exports": {
    ".": "./dist/esm/index.js",
    "./package.json": "./package.json"
  },
  "bin": {
    "cmv": "./dist/index.js",
    "commandville": "./dist/index.js"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "shx rm -rf dist",
    "typecheck": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:esm": "swc ./src --config-file ../../.swcrc -d ./dist/esm",
    "build": "NODE_ENV=production run-p build:types build:esm",
    "apiReport:run": "api-extractor run",
    "apiReport:check": "run-s build:types apiReport:run",
    "apiReport:generate": "run-s build:types \"apiReport:run -- --local\"",
    "start": "NODE_ENV=development run-p \"build:types -- -w\" \"build:esm -- -w\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dworthen/commandville.git"
  },
  "keywords": [
    "CLI",
    "runner"
  ],
  "author": "Derek Worthen <worthend.derek@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dworthen/commandville/issues"
  },
  "homepage": "https://github.com/dworthen/commandville#readme",
  "dependencies": {
    "@commandville/core": "workspace:^0.3.0",
    "find-up": "^5.0.0"
  },
  "devDependencies": {
    "@jsdevtools/npm-publish": "^1.4.3",
    "@microsoft/api-extractor": "^7.18.1",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.130",
    "@types/glob": "^7.1.3",
    "@types/multipipe": "^3.0.0",
    "@types/node": "^15.12.4",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "typescript": "^4.2.4"
  }
}
