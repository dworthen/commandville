{
  "name": "@commandville/transform",
  "version": "0.2.1",
  "description": "utility for creating Node transform streams.",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/types/transform.d.ts",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "shx rm -rf dist",
    "out:docs": "typedoc --readme none --out ./docs/build --entryDocument api.md ./src/index.ts",
    "move:docs": "shx cp ./docs/_category_.json ../../docs/docs/packages/transform/ && shx cp  -r ./docs/build/* ../../docs/docs/packages/transform/",
    "build:docs": "run-s out:docs move:docs",
    "typecheck": "tsc --noEmit",
    "build:types": "tsc --emitDeclarationOnly",
    "build:package": "esbuild src/**/*.ts --sourcemap --format=esm --platform=node --target=node14 --outdir=dist",
    "build": "run-p api build:package",
    "api:build": "api-extractor run",
    "api": "run-s build:types \"api:build -- --local\"",
    "api:check": "run-s build:types api:build",
    "docs:mkdir": "shx mkdir -p ../../docs/docs/packages/transform",
    "docs:copy": "shx cp -r ./docs/* ../../docs/docs/packages/transform/",
    "docs": "run-s api docs:mkdir docs:copy",
    "watch:types": "pnpm build:types -- --watch",
    "watch:package": "pnpm build:package -- --watch",
    "start": "run-p watch:types watch:package",
    "release:package": "npm-publish --token $NPM_TOKEN --access public ./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dworthen/commandville.git"
  },
  "keywords": [
    "transform",
    "streams"
  ],
  "author": "Derek Worthen <worthend.derek@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dworthen/commandville/issues"
  },
  "homepage": "https://github.com/dworthen/commandville#readme",
  "devDependencies": {
    "@jsdevtools/npm-publish": "^1.4.3",
    "@microsoft/api-documenter": "^7.13.30",
    "@microsoft/api-extractor": "^7.18.1",
    "@types/node": "^15.12.5",
    "esbuild": "^0.12.12",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "typedoc": "^0.21.2",
    "typedoc-plugin-markdown": "^3.10.2",
    "typescript": "^4.3.4"
  }
}
